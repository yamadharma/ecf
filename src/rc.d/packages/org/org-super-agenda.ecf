;;;; Supercharge your Org daily/weekly agenda by grouping items -*- coding: utf-8-unix; -*-
;; https://github.com/alphapapa/org-super-agenda

(require 'org-super-agenda)

(setq org-super-agenda-groups
      '((:log t)  ;; Automatically named "Log"
        (:name "Inbox"
               :file-path "inbox\\.org")
        (:name "Today"
	       :time-grid t  ; Items that appear on the time grid
	       :scheduled today)
	(:name "Due today"
	       :deadline today)
	(:habit t)
        (:name "Next to do"
               :todo "NEXT")
	(:name "Important"
               :priority "A")
	(:name "Important B"
               :priority "B")
        (:name "Schedule"
               :time-grid t)
	(:name "Quick Picks"
	       :effort< "0:30")
        (:auto-property "WAITING_ON" :log t)
        (:name "Waiting"
               :todo "WAITING")
	(:name "Due soon"
               :deadline future)
	(:name "Overdue"
	       :deadline past)
        (:name "Unimportant"
                :todo ("SOMEDAY" "MAYBE" "CHECK" "TO-READ" "TO-WATCH")
                :order 100)
        (:name "Scheduled earlier"
                :scheduled past)
        ;; normal priority
        (:name "Misc"
	       :not (:priority "A")
	       :not (:priority "B"))))

(org-super-agenda-mode)

;;;;
